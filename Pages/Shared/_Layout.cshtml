<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyPractice.Yoga</title>
    <link href="~/css/site.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Fira+Sans:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i|Lato:100,100i,300,300i,400,400i,700,700i,900,900i&display=swap" rel="stylesheet">
    <link href="https://rsms.me/inter/inter.css" rel="stylesheet">
    @RenderSection("Styles", false)
</head>
<body class="bg-orange-200 mb-0 subpixel-antialiased">
    <div class="static mx-auto md-bg-orange-400 max-w-full">
        <div id="app" class="px-6 pt-6 md:max-w-screen-md md:mx-auto">

            <main class="mx-auto pb-32">
                <partial name="_StatusMessage" />
                @RenderBody()
            </main>

        </div>
            @if (User.HasClaim(x => x.Type == "role" && x.Value.ToLower() == "instructor".ToLower()))
            {
                
            }
        
        <footer class="fixed bottom-0 left-0 right-0 max-w-full bg-orange-200">

            <div class="bg-orange-200">

                <nav id="footer-nav" class="bg-orange-900 h-14 flex items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="flex justify-around font-button text-xs text-orange-500 mx-auto">
                            <a class="flex-none px-2 py-2 m-2 font-button text-orange-500 cursor-pointer text-center" asp-page="/Student/Dashboard">
                                <svg class="fill-current h-8 w-8 mx-auto" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M13 20v-5h-2v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-7.59l-.3.3a1 1 0 11-1.4-1.42l9-9a1 1 0 011.4 0l9 9a1 1 0 01-1.4 1.42l-.3-.3V20a2 2 0 01-2 2h-3a2 2 0 01-2-2zm5 0v-9.59l-6-6-6 6V20h3v-5c0-1.1.9-2 2-2h2a2 2 0 012 2v5h3z" />
                                </svg>
                                home
                            </a>
                            <a class="flex-none px-2 py-2 m-2 font-button text-orange-500 cursor-pointer text-center" asp-page="/Student/Library">
                                <svg class="fill-current h-8 w-8 mx-auto" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5 3h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5c0-1.1.9-2 2-2zm14 12v-2h-2v2h2zm0 2h-2v2h2v-2zM5 15h2v-2H5v2zm0 2v2h2v-2H5zm14-8h-2v2h2V9zm0-2V5h-2v2h2zM5 9v2h2V9H5zm0-2h2V5H5v2zm4 4h6V5H9v6zm0 2v6h6v-6H9z" />
                                </svg>
                                classes
                            </a>
                            <a class="flex-none px-2 py-2 m-2 font-button text-orange-500 cursor-pointer text-center" asp-page="/Student/Profile">
                                <svg class="fill-current h-8 w-8 mx-auto" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12a5 5 0 110-10 5 5 0 010 10zm0-2a3 3 0 100-6 3 3 0 000 6zm9 11a1 1 0 01-2 0v-2a3 3 0 00-3-3H8a3 3 0 00-3 3v2a1 1 0 11-2 0v-2a5 5 0 015-5h8a5 5 0 015 5v2z" />
                                </svg>
                                profile
                            </a>
                            @if (User.HasClaim(x => x.Type == "role" && x.Value.ToLower() == "instructor".ToLower()))
                            {
                            <div class="relative flex">
                                <a id="mobile_in_icon" class="flex-none px-2 py-2 m-2 font-button text-orange-500 cursor-pointer text-center">
                                    <svg class="fill-current h-8 w-8 mx-auto" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9 4.58V4c0-1.1.9-2 2-2h2a2 2 0 012 2v.58a8 8 0 011.92 1.11l.5-.29a2 2 0 012.74.73l1 1.74a2 2 0 01-.73 2.73l-.5.29c.1.74.1 1.48 0 2.22l.5.3a2 2 0 01.73 2.72l-1 1.74a2 2 0 01-2.73.73l-.5-.3A8 8 0 0115 19.43V20a2 2 0 01-2 2h-2a2 2 0 01-2-2v-.58a8 8 0 01-1.92-1.11l-.5.29a2 2 0 01-2.74-.73l-1-1.74a2 2 0 01.73-2.73l.5-.29c-.1-.74-.1-1.48 0-2.22l-.5-.3a2 2 0 01-.73-2.72l1-1.74a2 2 0 012.73-.73l.5.3A8 8 0 019 4.57v.01zM7.88 7.64l-.54.51-1.77-1.02-1 1.74 1.76 1.01-.17.73a6.02 6.02 0 000 2.78l.17.73-1.76 1.01 1 1.74 1.77-1.02.54.51a6 6 0 002.4 1.4l.72.2V20h2v-2.04l.71-.2a6 6 0 002.41-1.4l.54-.51 1.77 1.02 1-1.74-1.76-1.01.17-.73c.22-.91.22-1.87 0-2.78l-.17-.73 1.76-1.01-1-1.74-1.77 1.02-.54-.51a6 6 0 00-2.4-1.4l-.72-.2V4h-2v2.04l-.71.2a6 6 0 00-2.41 1.4zM12 16a4 4 0 110-8 4 4 0 010 8zm0-2a2 2 0 100-4 2 2 0 000 4z" />
                                    </svg>
                                    instructor
                                </a>

                                <div id="mobile_in_menu" class="absolute hidden text-right bg-orange-800 px-10 py-2 rounded-large shadow-sm font-button font-bold text-2xl text-orange-500" style="left: -125px; bottom: 65px; z-index: 1; min-width: 300px">
                                    <ul>
                                        <li class="px-4 my-2">
                                            <a class="font-button font-bold text-orange-500" asp-page="/Instructor/UploadAudio">Upload Audio</a>
                                        </li>
                                        <li class="px-4 my-2">
                                            <a class="font-button font-bold text-orange-500" asp-page="/Instructor/ContentList">Manage Content</a>
                                        </li>
                                        <li class="px-4 my-2">
                                            <a class="font-button font-bold text-orange-500" asp-page="/Instructor/Profile">Profile</a>
                                        </li>
                                        <li class="px-4 my-2">
                                            <a class="font-button font-bold text-orange-500" asp-page="/Instructor/InviteStudent">Invite Students</a>
                                        </li>
                                        <li class="px-4 my-2">
                                            <a class="font-button font-bold text-orange-500" asp-page="/Instructor/ListStudents">Current Students</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            }
                            @if (User.HasClaim(x => x.Type == "role" && x.Value.ToLower() == "admin".ToLower()))
                            {
                                <div class="relative flex">
                                    <a id="mobile_ad_icon" class="flex-none px-2 py-2 m-2 font-button text-orange-500 cursor-pointer text-center">
                                        <svg class="fill-current h-8 w-8 mx-auto" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M7 10V7a5 5 0 1110 0v3h2a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2v-8c0-1.1.9-2 2-2h2zm2 0h6V7a3 3 0 00-6 0v3zm-4 2v8h14v-8H5zm7 2a1 1 0 011 1v2a1 1 0 01-2 0v-2a1 1 0 011-1z" />
                                        </svg>
                                        admin
                                    </a>

                                    <div id="mobile_ad_menu" class="absolute hidden text-right bg-orange-800 px-10 py-2 rounded-large shadow-sm font-button font-bold text-2xl text-orange-500" style="left: -185px; bottom: 65px; z-index: 1; min-width: 300px">
                                        <ul>
                                            <li class="px-4 my-2">
                                                <a class="font-button font-bold text-orange-500" asp-page="/Admin/ManageProfiles">Manage Profiles</a>
                                            </li>
                                            <li class="px-4 my-2">
                                                <a class="font-button font-bold text-orange-500" asp-page="/Admin/InviteInstructor">Invite Instructor</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            }
                            <a class="flex-none px-2 py-2 m-2 font-button text-orange-500 cursor-pointer text-center w-12" asp-page="/Help">
                                <svg class="fill-current h-8 w-8 mx-auto" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 22a10 10 0 110-20 10 10 0 010 20zm0-2a8 8 0 100-16 8 8 0 000 16zM10.59 8.59a1 1 0 11-1.42-1.42 4 4 0 115.66 5.66l-2.12 2.12a1 1 0 01-1.42-1.42l2.12-2.12A2 2 0 0010.6 8.6l-.01-.01zM12 18a1 1 0 110-2 1 1 0 010 2z" />
                                </svg>
                                help
                            </a>
                        </div>

                    }
                    else
                    {
                        <a asp-page="./Help" class="font-button font-semibold text-xl text-orange-600 mx-auto">
                            learn more
                        </a>
                    }

                </nav>
                <p class="font-sans text-center text-orange-900 text-xs my-2 bg-orange-200">
                    &copy; 2020 MyPractice.Yoga - Happy App Software Co.
                </p>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true" type="module" ></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
